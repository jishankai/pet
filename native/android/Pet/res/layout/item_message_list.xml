<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:clickable="true">
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/left_layout1"
    android:visibility="visible"
    android:layout_toLeftOf="@+id/right_layout"
    android:paddingLeft="15dp">
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/left_layout"
    android:visibility="visible"
    android:paddingRight="15dp" >
       <com.aidigame.hisun.pet.view.RoundImageView
       android:id="@+id/imageView1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"/>
   

    <!-- <ImageView
        android:id="@+id/imageView1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/a11" /> -->

   
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="斯坦☆_☆" 
        android:textColor="@color/orange_red"/>
     <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/textView4"
        android:text="回复了我的评论"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:text="3天前"
        android:textColor="#858585"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="5dp"
        android:text="今天天气真好"
        android:textColor="#858585" 
        />

    <TextView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="5dp"
        android:text="3"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:background="@drawable/ball_red" />
    </RelativeLayout>
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/orange_red"
        android:layout_centerInParent="true"
       android:layout_alignParentRight="true"
        android:gravity="center"
        android:visibility="gone">
       <TextView 
           android:id="@+id/deleteTv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="删除"
           android:gravity="center"
           android:textColor="@color/white"/>
        
    </LinearLayout>
    <View  android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        android:layout_below="@+id/left_layout1"
        android:layout_marginTop="10dp"/>

</RelativeLayout>