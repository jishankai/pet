<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efefef" >
    <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fc7b51"/>

          <TextView
              android:id="@+id/textView1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="分享到" 
              android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"/>
          <RelativeLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp">

              <ImageView
                  android:id="@+id/imageView1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"
                  android:src="@drawable/more_friend" />

              <ImageView
                  android:id="@+id/imageView2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="59dp"
                  android:layout_toLeftOf="@+id/imageView1"
                  android:src="@drawable/more_weixin" />

              <ImageView
                  android:id="@+id/imageView4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="59dp"
                  android:layout_toRightOf="@+id/imageView1"
                  android:src="@drawable/more_xinlang" />

              <TextView
                  android:id="@+id/textView2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toLeftOf="@+id/textView3"
                  android:layout_marginRight="52dp"
                  android:layout_below="@+id/imageView2"
                  android:layout_marginTop="5dp"
                  android:text="微信好友" />

              <TextView
                  android:id="@+id/textView3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/imageView1"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="5dp"
                  android:text="朋友圈" />

              <TextView
                  android:id="@+id/textView4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@+id/textView3"
                  android:layout_below="@+id/imageView2"
                  android:layout_marginLeft="69dp"
                  android:layout_marginTop="5dp"
                  android:text="微博" />
              
          </RelativeLayout>
          <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#e3e3e3"
              android:layout_marginTop="5dp"/>
          <LinearLayout 
              android:id="@+id/one_button_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:paddingLeft="30dp"
              android:paddingRight="30dp"
              android:gravity="center">
              <LinearLayout 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                   <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/button_green"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:text="私信"/>
                   <TextView
        android:id="@+id/report_tv"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/button_gray_light2"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        
        android:textColor="@color/white"
        android:text="举报"/>
              </LinearLayout>
             
          </LinearLayout>
          <LinearLayout 
              android:id="@+id/two_button_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:paddingLeft="30dp"
              android:paddingRight="30dp"
              android:gravity="center"
              android:orientation="horizontal">
              <TextView
        android:id="@+id/textView6"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/button_green"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:text="捧TA"/>
               <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/button_green"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:text="关注"/>
          </LinearLayout>
            <LinearLayout 
              android:id="@+id/two_button_layout2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:paddingLeft="30dp"
              android:paddingRight="30dp"
              android:gravity="center"
              android:orientation="horizontal">
              <TextView
        android:id="@+id/textView9"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/button_green"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:text="拍照"/>
               <TextView
        android:id="@+id/textView10"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/button_gray_light2"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        
        android:text="修改资料"/>
          </LinearLayout>
          <View android:layout_width="match_parent"
              android:layout_height="5dp"
              android:background="#e3e3e3"/>
          <TextView 
              android:id="@+id/cancel_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="取消"
              android:textSize="16sp"
              android:gravity="center"
              android:paddingTop="12dp"
              android:paddingBottom="12dp"/>

</LinearLayout>
