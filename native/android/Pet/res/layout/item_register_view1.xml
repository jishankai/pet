<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_centerInParent="true"
        android:paddingBottom="0dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:src="@drawable/half_circle"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />
        <LinearLayout 
            android:id="@+id/linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:background="@drawable/pink_transparent"
            android:orientation="vertical"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="15dp"
            android:paddingTop="30dp"
            android:visibility="visible"
            >
            
             <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_note1"
            android:paddingTop="10dp"
            android:textSize="16sp"
            android:textColor="#f4fedd"/>
              <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/button_white"
        android:focusable="true"
        android:focusableInTouchMode="true" >
               <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="14sp"
             android:layout_marginLeft="0dp"
            android:textColor="#b9b9b9"
            />
        <EditText
            android:id="@+id/editText44" 
            android:layout_width="150dp" 
            android:layout_height="wrap_content"
            android:hint=""
            android:text=""
            android:textColor="#3fb9ba"
            android:gravity="center"
            android:maxLength="8"
           
            android:singleLine="true"
            android:textSize="@dimen/register_text_size_normal"
            android:layout_weight="1"
            android:background="@null"/>
         <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/keyboard" 
            android:layout_marginRight="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/petrace_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/button_white"
        android:focusable="true"
        android:focusableInTouchMode="true" >
               <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="种族"
            android:textSize="14sp"
             android:layout_marginLeft="0dp"
            android:textColor="#b9b9b9"
            
            />
        <EditText
            android:id="@+id/editText55" 
            android:layout_width="150dp" 
            android:layout_height="wrap_content"
            android:hint=""
            android:text=""
            android:textColor="#3fb9ba"
            android:gravity="center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="@dimen/register_text_size_normal"
            android:layout_weight="1"
            android:editable="false"
            android:background="@null"/>
          <ImageView
            android:id="@+id/chose_class_imageview"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/right"
            android:layout_marginRight="10dp" />

    </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/button_white"
        android:focusable="true"
        android:focusableInTouchMode="true" >
               <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄"
            android:textSize="14sp"
             android:layout_marginLeft="0dp"
            android:textColor="#b9b9b9"
            
            />
        <EditText
            android:id="@+id/editText66" 
            android:layout_width="150dp" 
            android:layout_height="wrap_content"
            android:hint=""
            android:text=""
            android:textColor="#3fb9ba"
            android:gravity="center"
            android:textSize="@dimen/register_text_size_normal"
            android:layout_weight="1"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:editable="false"/>
          <ImageView
            android:id="@+id/chose_class_imageview"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/right"
            android:layout_marginRight="10dp" />

    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView 
        android:id="@+id/imageview_female"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/female_gray"
        android:layout_marginTop="15dp"/>
     <ImageView 
        android:id="@+id/imageview_male"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/male_gray"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"/>
    </LinearLayout>
        </LinearLayout>
         <com.aidigame.hisun.imengstar.view.RoundImageView
             android:id="@+id/pet_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/camera1"
        android:layout_centerHorizontal="true" 
        android:layout_marginTop="20dp"/>
          <ImageView 
        android:id="@+id/pet_sex"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/female"
        android:layout_below="@+id/imageView1"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:visibility="invisible"/>
            <Button
            android:id="@+id/button1"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/linearlayout"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:background="@drawable/button"
             />
          
    </RelativeLayout>
  

</RelativeLayout>
