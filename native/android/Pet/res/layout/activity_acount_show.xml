<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_light" >
    
    <LinearLayout
        android:id="@+id/set_up_title_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back" 
            android:padding="8dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="账号可见性" 
            android:textSize="20sp"
            android:gravity="center"/>
        
    </LinearLayout>
       
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"/>
        <RelativeLayout
            android:id="@+id/acount_visibilty_relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" 
        android:layout_marginTop="0dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/acount_visibilty_imageView2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/all_people_gray" 
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/acount_visibilty_imageView2"
            android:layout_centerVertical="true"
            android:text="所有人" />
         <ImageView
            android:id="@+id/acount_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39dp"
            android:src="@drawable/chose"
            android:visibility="invisible" />



    </RelativeLayout>
        <RelativeLayout
             android:id="@+id/acount_visibilty_relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" 
        android:layout_marginTop="1dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/acount_visibilty_imageView3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/private_yellow" 
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/acount_visibilty_imageView3"
            android:layout_centerVertical="true"
            android:text="我关注的人" />
         <ImageView
            android:id="@+id/acount_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39dp"
            android:src="@drawable/chose"
            android:visibility="visible" />




    </RelativeLayout>
        <RelativeLayout
             android:id="@+id/acount_visibilty_relativelayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" >

        <ImageView
            android:id="@+id/acount_visibilty_imageView4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/lock_gray" 
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/acount_visibilty_imageView4"
            android:layout_centerVertical="true"
            android:text="我自己" />
         <ImageView
            android:id="@+id/acount_3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39dp"
            android:src="@drawable/chose"
            android:visibility="invisible" />



    </RelativeLayout>
        <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"/>
      
</LinearLayout>
