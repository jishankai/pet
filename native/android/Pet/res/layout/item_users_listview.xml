<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp" 
    android:paddingBottom="8dp"
    android:paddingLeft="15dp"
    android:id="@+id/linearlayout"
    android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:gravity="center_vertical" 
        >
        <com.aidigame.hisun.pet.view.RoundImageView
            android:id="@+id/icon_circleView"
            android:layout_width="54dp"
            android:layout_height="54dp"/>
        <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon_circleView"
        android:layout_alignEnd="@+id/icon_circleView"
        android:layout_marginRight="-3dp"
        android:layout_marginBottom="-3dp"
        android:src="@drawable/ball_red_gift" />
        
    <RelativeLayout
        android:layout_toRightOf="@+id/icon_circleView"
        android:layout_toLeftOf="@+id/linearlayout3"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="16dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/female1" />
                     <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:text="忍者神龟" 
             android:textSize="14sp"
             android:textColor="#fc7b51"
             android:paddingLeft="5dp"/>

        </LinearLayout>
         <LinearLayout
             android:layout_below="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:orientation="horizontal">

             <TextView
                 android:id="@+id/textView3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="北京市" />

             <TextView
                 android:id="@+id/textView4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="|" 
                 android:paddingLeft="3dp"/>

             <TextView
                 android:id="@+id/textView5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="朝阳区" 
                 android:paddingLeft="3dp"/>

            </LinearLayout>


        
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/linearlayout3"
        android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:background="@drawable/button_green"
        android:visibility="invisible"
        android:gravity="center">
         <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mail_new"/>
    </LinearLayout>

    

    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"
        android:background="@color/white"/>


</LinearLayout>
