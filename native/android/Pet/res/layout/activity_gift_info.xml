<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:id="@+id/layout"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/white">
     
 <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         
     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         
        /><!-- android:src="@drawable/a3"  android:scaleType="fitXY" -->
     <ImageView 
         android:id="@+id/close_iv"
             android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/gift_detail_close" 
         android:layout_alignParentRight="true"/>
     </RelativeLayout>
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingTop="10dp"
         android:paddingBottom="0dp">
         <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="伟嘉  宠物猫粮  幼猫 海洋鱼味  12.kg"
         android:layout_marginLeft="15dp" 
         android:textSize="16sp"
         android:textColor="@color/black"/>

         <ImageView
             android:id="@+id/imageView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView1"
             android:layout_marginLeft="15dp"
             android:layout_marginTop="0dp"
             android:src="@drawable/exchange_food_red" />

         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBottom="@+id/imageView2"
             android:layout_marginLeft="5dp"
             android:layout_toRightOf="@+id/imageView2"
             android:text="2000"
             android:textSize="20sp"
             android:textColor="@color/orange_red1" 
             android:layout_marginBottom="3dp"/>
         
     </RelativeLayout>

     <ScrollView android:layout_width="match_parent"
         android:layout_height="150dp"
         android:orientation="vertical"
         
         android:fadingEdge="none"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:scrollbarSize="3dp"
            ><!-- 
            android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"android:background="#f2f2f2" -->
     <LinearLayout android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:background="@color/blur_view_top">
         <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         android:layout_marginLeft="15dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="产品名称：" 
             android:textSize="12sp"
             android:textColor="#414141"
             android:visibility="gone"/>

         <TextView
             android:id="@+id/textView4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="伟嘉  宠物猫粮  幼猫 海洋鱼味  12.kg"
             android:layout_marginLeft="10dp" 
             android:textColor="#414141"
             android:textSize="12sp"
             android:visibility="gone"
             android:layout_marginRight="10dp"/>

     </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         android:layout_marginLeft="15dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="适用范围：" 
             android:textSize="12sp"
             android:textColor="#414141"
             android:visibility="gone"/>

         <TextView
             android:id="@+id/textView5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="1-12月幼猫以及怀孕和哺乳期母猫"
             android:layout_marginLeft="10dp" 
             android:textColor="#414141"
             android:textSize="12sp"
             android:visibility="gone"
             android:layout_marginRight="10dp"/>

     </LinearLayout>
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         android:layout_marginLeft="15dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="产品规格：" 
             android:textSize="12sp"
             android:textColor="#414141"
             android:visibility="gone"/>

         <TextView
             android:id="@+id/textView6"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="1.2kg"
             android:textSize="12sp"
             android:visibility="gone"
             android:layout_marginLeft="10dp" 
             android:textColor="#414141"/>

     </LinearLayout>
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         android:layout_marginLeft="15dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="保质期：" 
             android:textSize="12sp"
             android:textColor="#414141"
             android:visibility="gone"/>

         <TextView
             android:id="@+id/textView7"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="36个月"
             android:textSize="12sp"
             android:visibility="gone"
             android:layout_marginLeft="10dp" 
             android:textColor="#414141"/>

     </LinearLayout>
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         android:layout_marginLeft="15dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="邮寄方式：" 
             android:textSize="12sp"
             android:textColor="#414141"
             android:visibility="gone"/>

         <TextView
             android:id="@+id/textView8"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:textSize="12sp"
             android:visibility="gone"
             android:layout_marginLeft="10dp" 
             android:textColor="#414141"
             android:layout_marginRight="10dp"/>

     </LinearLayout>
     </LinearLayout>
     </ScrollView>
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         android:paddingLeft="15dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         android:gravity="center_vertical"
         android:background="@color/blur_view_top"
         >
          <TextView 
              android:id="@+id/buy_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/food_sure_big_"
              android:text="确认兑换"
              
              android:gravity="center"
              android:textColor="@color/white"
              android:textSize="20sp"/>
     </LinearLayout>

</LinearLayout>
