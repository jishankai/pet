<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout" >
   <!--  <com.aidigame.hisun.pet.view.MyScrollView 
        android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"> --><!-- com.aidigame.hisun.pet.view.MyScrollV -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical" >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/banner_layout">
            <com.aidigame.hisun.pet.view.MyViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.aidigame.hisun.pet.view.MyViewPager>
            <!-- com.aidigame.hisun.pet.view.MyViewPager -->
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/viewpager"
                
                android:layout_marginTop="-15dp"
                android:orientation="horizontal">
                <ImageView 
                    android:id="@+id/point1"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/point_red"
                    android:visibility="gone"
                    />
                 <ImageView 
                    android:id="@+id/point2"
                    android:layout_marginLeft="5dp"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/point_gray"
                    android:visibility="gone"/>
                 <ImageView 
                    android:id="@+id/point3"
                    android:layout_marginLeft="5dp"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/point_gray"
                    android:visibility="gone"/>
                 <ImageView 
                    android:id="@+id/point4"
                    android:layout_marginLeft="5dp"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/point_gray"
                    android:visibility="gone"/>
                 <ImageView 
                    android:id="@+id/point5"
                    android:layout_marginLeft="5dp"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/point_gray"
                    android:visibility="gone"/>
                 <ImageView 
                    android:id="@+id/point6"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/point_gray"
                    android:visibility="gone"/>
                  <ImageView 
                    android:id="@+id/point7"
                    android:layout_marginLeft="5dp"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/point_gray"
                    android:visibility="gone"/>
                  <ImageView 
                    android:id="@+id/point8"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/point_gray"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
        
    <me.maxwin.view.XListView
        android:id="@+id/list"
        android:scrollbars="vertical"
         android:fastScrollEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        />
    </LinearLayout>
<!-- </com.aidigame.hisun.pet.view.MyScrollView> -->

</LinearLayout>