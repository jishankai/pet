<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/blur_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/orange_red" 
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_white" 
            android:padding="12dp"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:text="收货地址" 
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/save_tv"
            android:layout_width="54dp"
            android:layout_height="32dp"
            android:background="@drawable/button_light_purple"
            android:text="保存"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:clickable="false"
            android:layout_marginRight="8dp"
             />

    </LinearLayout>

    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blur_view_top"
        android:focusable="true"
        android:focusableInTouchMode="true" >
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
             android:background="@color/blur_view_top">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人姓名："
                android:textSize="14sp"
                android:textColor="@color/black" />
            <EditText 
                android:id="@+id/name_et"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="姓名"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:textColor="#fc7b51"
                android:background="@null"/>

        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.2dp" 
            android:id="@+id/view"
            android:background="#beb5a5"/>
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@color/blur_view_top">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码："
                android:textSize="14sp"
                android:textColor="@color/black" />
            <EditText 
                android:id="@+id/phone_num_et"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="手机号码"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:inputType="number"
                 android:textColor="#fc7b51"
                android:background="@null"/>

        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.2dp" 
            android:id="@+id/view"
            android:background="#beb5a5"/>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@color/blur_view_top">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮政编码："
                android:textSize="14sp"
                android:textColor="@color/black" />
            <EditText 
                android:id="@+id/post_code_et"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="邮政编码"
                android:textSize="12sp"
                android:inputType="number"
                android:layout_marginLeft="15dp"
                 android:textColor="#fc7b51"
                android:background="@null"/>

        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.2dp" 
            android:id="@+id/view"
            android:background="#beb5a5"/>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@color/blur_view_top">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所在地区："
                android:textSize="14sp"
                android:textColor="@color/black" />
            <EditText 
                android:id="@+id/province_city_et"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="在北京市朝阳区"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                 android:textColor="#fc7b51"
                android:background="@null"
                android:editable="false"/>

        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.2dp" 
            android:id="@+id/view"
            android:background="#beb5a5"/>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@color/blur_view_top">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址："
                android:textSize="14sp"
                android:textColor="@color/black" />
            <EditText 
                android:id="@+id/receiver_address_et"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="详细地址"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                 android:textColor="#fc7b51"
                android:background="@null"/>

        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="invisible">
            <net.simonvt.numberpicker.NumberPicker  
        android:id="@+id/numberpicker1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <TextView
        android:id="@+id/province_tv" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="16sp"
        android:text="北京"/>
    <net.simonvt.numberpicker.NumberPicker
        android:id="@+id/numberpicker2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true" />
           
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
