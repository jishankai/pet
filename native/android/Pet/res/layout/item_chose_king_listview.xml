<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    android:id="@+id/linearlayout"
    >

    <LinearLayout
        android:id="@+id/brief_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical" 
        android:paddingTop="8dp" 
    android:paddingBottom="8dp"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
        >
        <com.aidigame.hisun.pet.view.RoundImageView
            android:id="@+id/icon_circleView"
            android:layout_width="54dp"
            android:layout_height="54dp"/>
        
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:layout_marginLeft="16dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/female" />
                     <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="忍者神龟" 
             android:textSize="14sp"
             android:paddingLeft="5dp"
             android:textColor="@color/orange_red"/>

        </LinearLayout>
         <LinearLayout
             android:id="@+id/layout2"
             android:layout_below="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

             <TextView
                 android:id="@+id/textView3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="西伯利亚森林猫" />

             <TextView
                 android:id="@+id/textView4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="|" 
                 android:paddingLeft="3dp"/>

             <TextView
                 android:id="@+id/textView5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="2岁" 
                 android:paddingLeft="3dp"/>

            </LinearLayout>
             <LinearLayout
             android:layout_below="@+id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

             <TextView
                 android:id="@+id/textView3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="总人气："
                 android:textColor="#b4b4b4" 
                 android:textSize="12sp"/>
              <TextView
                 android:id="@+id/t_rq_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="50" 
                 android:textColor="#b4b4b4"
                 android:textSize="12sp"/>

             <TextView
                 android:id="@+id/textView4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="|" 
                 android:paddingLeft="10dp"
                 android:textColor="#b4b4b4"
                 android:textSize="12sp"/>

             <TextView
                 android:id="@+id/textView5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="成员：" 
                 android:paddingLeft="10dp"
                 android:textColor="#b4b4b4"
                 android:textSize="12sp"/>
             <TextView
                 android:id="@+id/fans_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="50" 
                 android:paddingLeft="3dp"
                 android:textColor="#b4b4b4"
                 android:textSize="12sp"/>

            </LinearLayout>


        
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/support_green"/>

    </LinearLayout>
    <View 
        android:id="@+id/gray_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="57dp"
        android:background="@drawable/gray_line"/>

    <LinearLayout
        android:id="@+id/more_info_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:background="@drawable/frame_concave"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">
       
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="精彩图片"
             android:textColor="@color/white"/>
            

            <LinearLayout
                android:id="@+id/images_layout"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_default" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/image_default" />
             
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_default" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/image_default" />
             
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" 
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="经济人名片"
                android:gravity="right"
                android:textColor="@color/white" />
            <com.aidigame.hisun.pet.view.RoundImageView
                android:id="@+id/user_icon_circle"
                android:layout_width="52dp"
                android:layout_marginTop="5dp"
                android:layout_height="52dp"/>
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="5dp"
             android:gravity="center_horizontal">

             <ImageView
                 android:id="@+id/imageView6"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/female1" />
             <TextView
             android:id="@+id/textView7"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="小明"
             android:textColor="@color/white" />
             
         </LinearLayout>
          <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center_horizontal">
             <TextView
             android:id="@+id/textView10"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="北京市"
             android:textColor="@color/white" />
            <!--  <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=" | "
             android:textColor="@color/white" />
              <TextView
             android:id="@+id/textView8"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="朝阳区"
             android:textColor="@color/white" /> -->
               <!-- <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=" | "
             android:textColor="@color/white" />
               <TextView
             android:id="@+id/textView9"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="忽"
             android:textColor="@color/white" /> -->
             
         </LinearLayout>
        

         

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
