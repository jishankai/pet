<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/homeactivity_right_relativelayout"
   android:visibility="visible">
    
      
    

    <RelativeLayout
        android:id="@+id/relativelayout_control"
        android:layout_width="match_parent"
        android:layout_height="@dimen/orange_title_height" 
        android:background="#33fc7b51"
        android:paddingTop="5dp"
        android:layout_below="@+id/linearlayout_title"
        android:paddingBottom="5dp"
>
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" 
            android:background="@drawable/plus_more"
            android:id="@+id/menu1"
           
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/imageView1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp" 
            android:background="#00000000"
            android:layout_centerVertical="true"
            />
         <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/camera" 
            android:visibility="visible"/><!--  android:layout_width="46dp"
            android:layout_height="32dp" -->

        <Button
           
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#00000000" 
             android:visibility="invisible"/>
         <TextView 
             android:id="@+id/title_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="我的萌星"
             android:textSize="20sp"
             android:textColor="@color/white"
             android:layout_centerInParent="true"/>


    </RelativeLayout>
    <android.support.v4.view.ViewPager
                android:layout_below="@+id/relativelayout_control"
                 android:id="@+id/viewpager"
                 android:layout_width="fill_parent"
                 android:layout_height="match_parent"
                 
                 android:background="#00000000"
                 android:layout_weight="1"
                 android:paddingLeft="0dp"
                 android:paddingRight="0dp">
                
            </android.support.v4.view.ViewPager>

             <LinearLayout
        android:id="@+id/progress_parent"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/relativelayout_control"
        android:background="#00000000"
        android:visibility="gone"
        android:layout_weight="1"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
       >
             </LinearLayout>

      <LinearLayout
          android:id="@+id/camera_album"
          android:layout_width="match_parent"
          android:layout_height="match_parent" 
          android:orientation="horizontal"
          android:layout_alignParentBottom="true"
          android:background="#80000000"
          android:visibility="invisible"
          android:gravity="center">
      </LinearLayout>
      <RelativeLayout 
          android:id="@+id/black_layout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:visibility="invisible">
          <View 
              android:id="@+id/popup_parent"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_centerInParent="true"/>
      </RelativeLayout>

   

</RelativeLayout>

</LinearLayout>
