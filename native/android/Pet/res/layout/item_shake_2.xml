<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/shake_note1"
            android:textColor="#7f97b3"
            android:textSize="16sp" />
        

        <RelativeLayout
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/shake_gift_background" >
            <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="宠物香波1个"
            android:textColor="#fc7b51"
            android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="96dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:src="@drawable/gift112" />
            <TextView
             android:id="@+id/textView9"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/imageView2"
             android:layout_marginTop="81dp"
             android:layout_centerHorizontal="true"
             android:text="猫君人气+10" 
             android:textColor="@color/white"
             android:textSize="14sp"
             android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:background="#E4E1DD"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">
             <ImageView
             android:id="@+id/imageView3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="30dp"
             android:layout_centerVertical="true"
             android:layout_toLeftOf="@+id/imageView4"
             android:src="@drawable/shake_weixin" 
             />
        
         <ImageView
             android:id="@+id/imageView4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:src="@drawable/shake_friend" />
          <ImageView
             android:id="@+id/imageView5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="30dp"
             android:layout_toRightOf="@+id/imageView4"
             android:src="@drawable/shake_xinlang" />
        </RelativeLayout>
        
        

</RelativeLayout>
