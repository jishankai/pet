<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_red" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_white" 
            android:padding="8dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"
            android:text="奖品详情" 
            android:textColor="@color/white"/>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/gold" 
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="19dp"
                android:layout_toRightOf="@+id/imageView2"
                android:text="一等奖" 
                android:textColor="#3e3e3e"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="11dp"
                android:text="@string/golde_decribe"
                android:textSize="16sp" />

        </RelativeLayout>
                <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/silver" 
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView3"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="19dp"
                android:layout_toRightOf="@+id/imageView3"
                android:text="二等奖" 
                android:textSize="18sp"
               android:textColor="#3e3e3e"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="11dp"
                android:text="诺瑞牛肉成犬粮10KG全能营养保护"
                android:textSize="16sp" />

        </RelativeLayout>
                        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/copper" 
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView4"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="19dp"
                android:layout_toRightOf="@+id/imageView4"
                android:text="三等奖" 
                android:textSize="18sp"
                android:textColor="#3e3e3e"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="11dp"
                android:text="派宠PATSINN小型犬巴酷笑笑屋红色环保猫狗窝"
                android:textSize="16sp" />

        </RelativeLayout>

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:src="@drawable/line_gray" 
                            android:scaleType="fitXY"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="5dp"
                            android:layout_marginTop="10dp"
                            android:textSize="16dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="1.阿猫阿狗官方在活动结束后，人气排名前三，分别获得一、二、三等奖。\n2.必须是自家萌宠的照片哦。\n3.奖品以实物为主。" />

</LinearLayout>
