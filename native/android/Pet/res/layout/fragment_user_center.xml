<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#33fc7b51">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>
        <ImageView 
            android:id="@+id/setup_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/user_center_setup"/>
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_center_info"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <com.aidigame.hisun.pet.view.RoundImageView 
                   android:id="@+id/show_topic_usericon"
                   android:layout_width="72dp"
                   android:layout_height="72dp"
                   android:layout_marginLeft="9.5dp"
                   android:src="@drawable/user_icon"
                   android:layout_marginTop="9.5dp"/>
        <LinearLayout 
            android:id="@+id/info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/show_topic_usericon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:gravity="bottom">
            <TextView 
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游荡的两脚兽"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <ImageView 
                android:id="@+id/gender_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/female1"
                android:visibility="gone"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
            <TextView 
                android:id="@+id/user_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宠物星球 | 我是大萌星"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_below="@+id/info_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/show_topic_usericon"/>
        
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:background="@drawable/user_center_function_bg">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout 
                android:clickable="true"
                android:id="@+id/message_layout"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                 <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView 
                    android:id="@+id/message_iv"
                android:layout_width="52dp"
                android:layout_height="54dp"
                android:src="@drawable/user_center_message"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
                <TextView 
                    android:id="@+id/message_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_center_message_num_ball"
                    android:layout_toRightOf="@+id/message_iv"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:text="0"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:layout_marginLeft="-20dp"/>
            </RelativeLayout>
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"/>
            </LinearLayout>
           
            <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b28f8f"/>
            <LinearLayout 
                android:clickable="true"
                android:id="@+id/give_layout"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <ImageView 
                android:layout_width="52dp"
                android:layout_height="54dp"
                android:src="@drawable/play_garden"
                android:layout_marginTop="5dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="玩耍"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <View 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#b28f8f"/>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout 
                android:clickable="true"
                android:id="@+id/market_layout"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
             <ImageView 
                android:layout_width="52dp"
                android:layout_height="54dp"
                android:src="@drawable/user_center_market"
                android:layout_marginTop="5dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商城"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b28f8f"/>
            <LinearLayout 
                android:clickable="true"
                android:id="@+id/gift_layout"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <ImageView 
                android:layout_width="52dp"
                android:layout_height="54dp"
                android:src="@drawable/user_center_gift"
                android:layout_marginTop="5dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼物"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"/>
            </LinearLayout>
            
        </LinearLayout>
        <View 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#b28f8f"/>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout 
                android:clickable="true"
                android:id="@+id/exchange_layout"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
             <ImageView 
                android:layout_width="52dp"
                android:layout_height="54dp"
                android:src="@drawable/user_center_exchange"
                android:layout_marginTop="5dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"/>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b28f8f"/>
            <LinearLayout 
                android:clickable="true"
                android:id="@+id/account_layout"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <ImageView 
                android:layout_width="52dp"
                android:layout_height="54dp"
                android:src="@drawable/user_center_account"
                android:layout_marginTop="5dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/user_center_charg_bg"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_center_login"
            android:background="@drawable/food_sure_big_"
             android:layout_centerInParent="true"
             android:textColor="@color/white"
             android:text="注册或登录"
             android:visibility="gone"
             android:gravity="center"
             android:textSize="18sp"/>
        <RelativeLayout 
            android:id="@+id/gold_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        
        >
             <ImageView 
            android:id="@+id/image_gold_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/gold1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"/>
        <TextView 
             android:id="@+id/gold_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="200000000"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/image_gold_iv"/>
        <RelativeLayout 
            android:id="@+id/charge_layout"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_center_button_red"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </RelativeLayout>
            </RelativeLayout>
       
    </RelativeLayout>
    

</LinearLayout>



     <!-- 注册弹窗使用 -->
 <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/black_layout"
          android:visibility="visible"
          android:gravity="center"
          >
          <View 
              android:id="@+id/popup_parent"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_centerInParent="true"/>
      </RelativeLayout>
</RelativeLayout>