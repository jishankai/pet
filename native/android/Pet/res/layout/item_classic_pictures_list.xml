<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:id="@+id/container_layout"
    android:layout_marginBottom="15dp"
    android:background="@color/white"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <com.aidigame.hisun.imengstar.view.RoundImageView 
            android:id="@+id/pet_icon_view"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/pet_icon"/>
        <TextView 
            android:id="@+id/pet_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:textColor="@color/orange_red1"
            android:text="来钱儿"/><!-- android:layout_weight="1" -->
        <LinearLayout 
            android:id="@+id/peng_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">
            <ImageView 
                android:id="@+id/peng_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_tick"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="捧ing"
                android:textSize="12sp"
                android:id="@+id/peng_tv"
                android:layout_marginLeft="1dp"/>
        </LinearLayout>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/time_tv"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="23分钟前"/>
    </LinearLayout>
    <ImageView 
        android:id="@+id/big_iv"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >
        <TextView 
            android:id="@+id/topic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange_red2"
            android:text="#话题#"/>
        <TextView 
            android:id="@+id/des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:text="图片描述"/>
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:id="@+id/like_layout"
            android:gravity="center">
            <ImageView 
                android:id="@+id/like_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/page_like"/>
            <TextView 
                android:id="@+id/like_tv"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:text="赞Ta"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:id="@+id/comment_layout"
            android:layout_toRightOf="@+id/like_layout"
            android:gravity="center">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/page_comment"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:id="@+id/gift_layout"
            android:layout_toRightOf="@+id/comment_layout"
            android:gravity="center">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_gift"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼物"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <ImageView 
            android:id="@+id/more_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bt_more"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:id="@+id/see_all_like_layout"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_liked"/>
          <com.aidigame.hisun.imengstar.view.HorizontalListView2
                android:id="@+id/galleryview"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
             android:layout_centerVertical="true"
             android:gravity="right"
             android:orientation="horizontal"
             android:layout_alignParentRight="true"
             android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="horizontal">
               <TextView 
              android:id="@+id/like_num_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:text="960"
              android:paddingTop="2dp"
              android:paddingBottom="2dp"
              android:gravity="center"
              android:singleLine="true"
              android:background="@drawable/bg_likes"
              android:textSize="10sp"/>
          </LinearLayout>
         
         <!--  <View 
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="1dp"/> -->
    </LinearLayout>
        <LinearLayout 
            android:id="@+id/see_all_comment_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_comment"
                android:layout_marginLeft="15dp"/>
            <TextView 
                android:id="@+id/comment_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="查看所有0条评论"
           android:layout_marginLeft="15dp"/>
        </LinearLayout>
         
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                 android:layout_marginTop="6dp"
                 android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp">
                
                <LinearLayout 
                    android:id="@+id/comment1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_comment"
                android:layout_marginLeft="15dp"
                android:visibility="invisible"
                 android:layout_marginRight="15dp"/>
               
                    <TextView
                        android:id="@+id/comment1_icon_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            
            android:textColor="@color/orange_red2"/>
                    <TextView 
                        android:id="@+id/comment1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:singleLine="true"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout 
                    android:id="@+id/comment2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                      <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_comment"
                android:layout_marginLeft="15dp"
                 android:visibility="invisible"
                 android:layout_marginRight="15dp"/>
                    <TextView
                        android:id="@+id/comment2_icon_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/orange_red2"/>
                    <TextView 
                        android:id="@+id/comment2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                         android:singleLine="true"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
   </LinearLayout>         
</LinearLayout>
