<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/framelayout"
    android:focusable="true"
    android:focusableInTouchMode="true" >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/blur_view_top">
    <View android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/white"
        android:id="@+id/top_white_view"/>
     <com.aidigame.hisun.pet.view.PullToRefreshAndMoreView
        android:id="@+id/activity_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
    </com.aidigame.hisun.pet.view.PullToRefreshAndMoreView>

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/orange_red" 
        android:paddingBottom="6dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        
        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_white" 
            android:padding="12dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="# 话题" 
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@+id/back"/>
        <TextView
            android:id="@+id/sure_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="确定" 
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@+id/back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_green"/>
        <View 
            android:id="@+id/line"
             android:layout_below="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:background="@color/orange_red"/>
        <EditText 
            android:id="@+id/input_topic_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入话题名称"
            android:background="@drawable/topic_at_frame_pink"
            android:layout_below="@+id/line"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:textColor="@color/white"
            android:paddingBottom="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="15dp"/>
        
    </RelativeLayout>
   
</FrameLayout>



