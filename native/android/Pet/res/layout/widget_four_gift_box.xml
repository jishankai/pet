        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_marginLeft="0dp">
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            
            android:background="@drawable/gift_image_background">
            <ImageView 
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:id="@+id/gift_image_iv1"
                android:src="@drawable/gift112"/>
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gift_sign_good"
            android:id="@+id/gift_sign_layout1">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精品豪华狗窝"
                android:textSize="10sp"
                android:textColor="#5f5e5e"
                android:id="@+id/gift_name1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"/>
             <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人气"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:id="@+id/add1"
                android:layout_marginTop="20dp"/>
             
             
             <LinearLayout 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                  android:layout_below="@+id/gift_name1"
                 android:id="@+id/no_gift_layout1"
                 android:layout_marginLeft="5dp"
                 android:visibility="invisible">
                   <ImageView 
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:id="@+id/gold_image1"
                
                 android:src="@drawable/gold_big"/>
             <TextView 
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content"
                 android:text="600"
                 android:layout_marginLeft="5dp"
                 android:layout_marginTop="1dp"
                 android:id="@+id/gold_num1"
                 android:textColor="@color/orange_red1"/>
             </LinearLayout>
             <LinearLayout 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                  android:layout_below="@+id/gift_name1"
                 android:id="@+id/has_gift_layout1"
                 android:visibility="visible"
                 android:layout_marginTop="3dp"
                 android:layout_marginLeft="5dp"
                 android:gravity="center_vertical">
              <ImageView
