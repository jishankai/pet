<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical" 
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="成功捧TA" 
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingTop="6dp"
        android:paddingBottom="10dp"/>

   

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content">
         <ImageView
        android:id="@+id/imageView1"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:src="@drawable/dialog_red_ball" 
        android:layout_centerHorizontal="true"/>
        
        <com.aidigame.hisun.pet.view.RoundImageView
            android:id="@+id/icon_circleView"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>
              <LinearLayout 
                   android:id="@+id/layout"
          android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_alignLeft="@+id/icon_circleView"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/icon_circleView"
            android:layout_marginTop="20dp">
                    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/icon_circleView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/icon_circleView"
            android:text="凉粉" 
            android:textColor="@color/orange_red"
            android:textSize="18sp"/>
                    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/icon_circleView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/icon_circleView"
            android:text=" 接纳你成为" 
            android:textColor="@color/orange_red"
            android:textSize="16sp"/>
            </LinearLayout>

         <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/icon_circleView"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layout"
            android:text="凉粉一枚" 
            android:textColor="@color/orange_red"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>
        
        
    </RelativeLayout>

    <TextView
        android:id="@+id/animal_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TA在过去的历史中" 
        android:textColor="#858382"
        android:layout_marginTop="10dp"
        />

      <LinearLayout 
          android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="10dp">
                <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="击败了" 
        android:textColor="#858382"
        />
                  <TextView
        android:id="@+id/percent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="击败了" 
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/orange_red1"
        />
                    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="的萌星" 
        android:textColor="#858382"
        />
      </LinearLayout>
      <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="期待您的加入让TA明天更加辉煌" 
        android:textColor="#858382"
        />

    <TextView
        android:id="@+id/button1"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:text="知道啦"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:textSize="16sp" 
        android:gravity="center"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>
    

</LinearLayout>
