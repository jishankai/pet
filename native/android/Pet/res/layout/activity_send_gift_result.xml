<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
        
        android:layout_width="wrap_content"
        android:layout_height="400dp">
<RelativeLayout
        android:id="@+id/share_bitmap_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/shake_ground_get2"
        android:orientation="vertical" >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="5dp">
            <ImageView 
            android:id="@+id/shine_view"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:src="@drawable/shake_shine"
            android:scaleType="fitXY"
            android:layout_marginTop="-67dp"
            android:layout_marginLeft="-95dp"
            />
        </LinearLayout>
         <ImageView 
            android:id="@+id/shine_view_bad"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/gift_bad_anim"
            android:scaleType="fitXY"
            android:visibility="invisible"
            />
       
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="给喵喵送个礼物"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/close_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp" /><!-- android:src="@drawable/delete" -->
            
            
            
        <TextView 
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:id="@+id/gift_name"
            android:text="女神蝴蝶结 x 1 "
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/shake_giftname_background"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="15dp"
            
            android:layout_marginLeft="2.2dp"
            />
        
         <RelativeLayout
            android:id="@+id/imageView1"
            android:layout_width="240dp"
            android:layout_height="248dp"
            android:layout_below="@+id/gift_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp"
            android:background="@drawable/shake_gift_background1" >
           <ImageView 
            android:layout_width="120dp"
            android:layout_height="102dp"
            android:src="@drawable/bug"
            android:id="@+id/gift_iv"
            android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
            />
            <TextView
             android:id="@+id/rq_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/gift_iv"
             android:layout_marginTop="5dp"
             android:layout_centerHorizontal="true"
             android:text="人气+10" 
             android:textColor="@color/white"
             android:textSize="16sp"
             android:gravity="center"/>
        </RelativeLayout>
        
        <TextView 
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:background="@drawable/button_green"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:text="再挑一个"/>
        
                <TextView 
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/sure"
            android:background="@drawable/button_green"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:text="确定"/>
                
                
            <LinearLayout 
                 android:id="@+id/roundImageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16.5dp"
            android:layout_marginLeft="13.7dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
                 <com.aidigame.hisun.imengstar.view.RoundImageView
            android:id="@+id/round"
            android:layout_width="56dp"
            android:layout_height="56dp"
            imagecontrol:border_thickness="3dp"
            imagecontrol:border_inside_color="@color/orange_red"
            android:layout_alignParentBottom="true"
            android:src="@drawable/pet_icon" 
            android:scaleType="centerCrop"
            /><!-- imagecontrol:border_outside_color="@color/orange_red" 
             -->
       

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="喵喵收到了您送的女神蝴蝶结感到神清气爽"
            android:layout_marginRight="30dp"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/orange_red1"
            android:textSize="12sp" />
            </LinearLayout>
        
       

         
        
    </RelativeLayout>
</RelativeLayout>