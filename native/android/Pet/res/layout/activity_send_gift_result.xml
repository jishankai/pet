<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
        
        android:layout_width="match_parent"
        android:layout_height="400dp">
<RelativeLayout
        android:id="@+id/share_bitmap_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/gift_result_good"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="给喵喵送个礼物"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/close_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp" />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gift_name"
            android:text="女神蝴蝶结 x 1 "
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"/>
        <ImageView 
            android:layout_width="120dp"
            android:layout_height="102dp"
            android:src="@drawable/bug"
            android:layout_below="@+id/gift_name"
            android:id="@+id/gift_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rq_tv"
            android:text="人气  +  10"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/gift_iv"
            android:textSize="16sp"
            android:layout_marginTop="0dp"
            android:textColor="@color/white"/>
        
        <TextView 
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:background="@drawable/button_green"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_below="@+id/rq_tv"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:text="再挑一个"/>
        
                <TextView 
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/sure"
            android:background="@drawable/button_green"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_below="@+id/rq_tv"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:text="确定"/>
                
                
            <LinearLayout 
                 android:id="@+id/roundImageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16.5dp"
            android:layout_marginLeft="13.7dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
                 <com.aidigame.hisun.pet.view.RoundImageView
            android:id="@+id/round"
            android:layout_width="56dp"
            android:layout_height="56dp"
            imagecontrol:border_thickness="3dp"
            imagecontrol:border_inside_color="@color/orange_red"
            android:layout_alignParentBottom="true"
            android:src="@drawable/pet_icon" 
            android:scaleType="centerCrop"
            /><!-- imagecontrol:border_outside_color="@color/orange_red" 
             -->
       

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="喵喵收到了您送的女神蝴蝶结感到神清气爽"
            android:layout_marginRight="30dp"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/orange_red1"
            android:textSize="12sp" />
            </LinearLayout>
        
       

         
        
    </RelativeLayout>
</RelativeLayout>