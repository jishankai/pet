<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout 
         xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:gravity="center"
    android:background="#d0F3E2C3">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/orange_title_height"
        android:background="#80fb6137"
        android:id="@+id/red_head"/>

    <com.aidigame.hisun.pet.view.CircleView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/register_circleview_w"
        android:layout_height="@dimen/register_circleview_w"
        android:layout_below="@+id/red_head"
        android:layout_centerHorizontal="true"
        android:src="@drawable/camera1" 
        android:layout_marginTop="@dimen/register_circleview_margin_top"/>
    <ImageView 
        android:id="@+id/imageview_female"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/female"
        android:layout_below="@+id/imageView1"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_marginLeft="@dimen/register_female_margin_left"
        android:layout_marginTop="@dimen/register_sex_image_margin_top"/>
     <ImageView 
        android:id="@+id/imageview_male"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/male_gray"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/imageview_female"
        android:layout_toRightOf="@+id/imageview_female"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/register_sex_image_margin_top"/>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_female"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_white"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/register_sex_image_margin_top"
        android:focusable="true"
        android:focusableInTouchMode="true" >
        <TextView 
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="我的名字"
            android:textSize="@dimen/register_text_size_normal"
            android:textColor="@color/gray_deep"
             android:layout_marginLeft="10dp"
            />
        <EditText 
            android:id="@+id/editText1"
            android:layout_width="100dp" style=""
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/register_text_size_normal"
            android:text=""/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/keyboard" 
            android:layout_marginRight="10dp"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_below="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/register_sex_image_margin_top"
        android:layout_centerHorizontal="true" 
        android:gravity="center_vertical"
        android:background="@drawable/button_white">
               <TextView 
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="我来自"
            android:textSize="@dimen/register_text_size_normal"
            android:textColor="@color/gray_deep"
             android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/editText3" 
            android:layout_width="100dp" 
            android:text=""
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/register_text_size_normal"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/chose_class_imageview"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/right"
            android:layout_marginRight="10dp" />

    </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/linearLayout3"
            android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/register_sex_image_margin_top"
        android:layout_centerHorizontal="true"
        android:gravity="left|center_vertical"
        android:background="@drawable/button_white"
        android:focusable="true"
        android:focusableInTouchMode="true"  >
               <TextView 
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="我今年"
            android:textSize="@dimen/register_text_size_normal"
            android:textColor="@color/gray_deep"
             android:layout_marginLeft="10dp"
            
            />
        <EditText
            android:id="@+id/editText4" 
            android:layout_width="100dp" 
            android:layout_height="wrap_content"
            android:hint=""
            android:text=""
            android:gravity="center"
            android:textSize="@dimen/register_text_size_normal"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"/>

        <TextView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="岁"
            android:textSize="@dimen/register_text_size_normal"
            android:textColor="@color/gray_deep"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
            <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout4"
        
         android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/register_sex_image_margin_top"
       android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_white"
        android:focusable="true"
        android:focusableInTouchMode="true"  >
               <TextView 
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="请填写邀请码"
            android:textSize="@dimen/register_text_size_normal"
            android:textColor="@color/gray_deep"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/editText2" 
            android:layout_width="100dp" 
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:textSize="@dimen/register_text_size_normal"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:visibility="gone" />

    </LinearLayout>
    <TextView 
        android:layout_marginTop="5dp"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/note_textView"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:text="*填写已注册用户的邀请码，双方都可获/n得xxx奖励哦。邀请码显示在用户的个人主/n页，快找朋友查看吧！"
        android:textColor="@color/orange_red"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/note_textView"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/register_sex_image_margin_top"
            android:background="@drawable/button_gray"
             />
        <LinearLayout
            android:id="@+id/progress_linearlayout1"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#00000000"
            android:layout_alignParentBottom="true" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/album_camera_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="#80000000"
          android:visibility="invisible"
          android:gravity="center" >
        </LinearLayout>

</RelativeLayout>