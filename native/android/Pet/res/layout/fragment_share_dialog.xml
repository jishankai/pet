<?xml version="1.0" encoding="utf-8"?>
      <RelativeLayout 
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/sharelayout"
          android:clickable="true"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/window_black_bagd"
          android:visibility="visible">
          <LinearLayout
              android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/share_linearlayout"
        android:background="@color/white"
        android:visibility="visible">
        <View 
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/orange_red1"
            android:visibility="gone"
            android:id="@+id/report_line0"/>
                       <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="分享到"
                    />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:background="@color/white"
            android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"><!--  android:background="@color/brown_deep" -->


            <LinearLayout
                 android:id="@+id/imageView22"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" 
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_horizontal"
>

                <ImageView
                   
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dialog_go_register_weixin" 
                    />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信联系人"
                    android:layout_marginTop="5dp" />

            </LinearLayout>
                        <LinearLayout
                             android:id="@+id/imageView32"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" 
                android:layout_weight="1"
                 android:clickable="true"
                android:gravity="center_horizontal">

                <ImageView
                   
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dialog_go_register_friend" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信朋友圈"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
                        <LinearLayout
                            android:id="@+id/imageView42"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" 
                android:layout_weight="1"
                 android:clickable="true"
                android:gravity="center_horizontal">

                <ImageView
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dialog_go_register_xinlang" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新浪微博" 
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
            
            
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_light"
            android:layout_below="@+id/report_tv"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:id="@+id/report_line1"/>
                        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            android:layout_below="@+id/report_tv"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:id="@+id/report_line4"/>
                         <LinearLayout 
              android:id="@+id/one_button_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              
              android:gravity="center"><!-- android:paddingLeft="5dp"
              android:paddingRight="5dp" -->
              <LinearLayout 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/btns_layout1"
                  android:visibility="gone"
                  android:paddingTop="8dp"
                  android:paddingBottom="15dp"
                  android:orientation="horizontal">
                <TextView 
                    android:id="@+id/reporttv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_report"/>
                <TextView 
                    android:id="@+id/messagetv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/more_message"/>
                </LinearLayout>
              <LinearLayout 
                  android:layout_width="wrap_content"
                  android:visibility="visible"
                  android:id="@+id/btns_layout2"
                  android:layout_height="wrap_content">
               
                 <TextView
        android:id="@+id/reporttv"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/report_bt"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        
        android:textColor="@color/white"
        android:text=""/>
                   <TextView
        android:id="@+id/pengta_tv"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/peng_ta_bt"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:layout_marginRight="30dp"
        android:text=""/>
                  
                    <TextView
        android:id="@+id/messagetv"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/private_message_bt"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:text=""/>
              </LinearLayout>
             
          </LinearLayout>
                        <View 
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_light"
            android:layout_below="@+id/report_tv"
            
            android:id="@+id/report_line2"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="16sp"
            android:text="取消" 
            android:background="@color/white"
            />

    </LinearLayout>

      </RelativeLayout>
