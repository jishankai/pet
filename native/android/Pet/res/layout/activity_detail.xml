                    android:lineSpacingExtra="5dp" 
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#767676"
                    android:textSize="14sp"/>
                
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@drawable/line_gray" 
                    android:scaleType="fitXY"/>
        

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/activity_time" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014-6-21至2014-6-29"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textColor="@color/gray_deep" />

                </LinearLayout>
                
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@drawable/line_gray" 
                    android:scaleType="fitXY"/>
        
                 <LinearLayout
                     android:id="@+id/award_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:clickable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/activity_medal" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一等奖：宠物贝贝摄影写真；二等奖：宝贝牌狗窝"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/right" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@drawable/line_gray" 
                    android:scaleType="fitXY"/>
                                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/activity_people" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="189/200人"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/gray_deep"/>

                </LinearLayout>
                                                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:id="@+id/join_people_linearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">
                     <com.aidigame.hisun.pet.view.HorizontalListView2
                android:layout_gravity="left"
                android:id="@+id/show_topic_listview"
                 android:layout_width="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_marginLeft="0dp"
                 
                 android:layout_height="48dp"
                  >
             </com.aidigame.hisun.pet.view.HorizontalListView2>

                     </LinearLayout>
                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/right"
                        android:layout_gravity="right|center_vertical" />
                    

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@drawable/line_gray" 
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp" 
                    android:paddingBottom="10dp">

                    

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="最热" 
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/orange_red"/>

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:src="@drawable/line_gray" 
                        android:scaleType="fitXY"/>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="最新" 
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="@color/gray_deep"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout 
                        android:id="@+id/pull_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                     </LinearLayout>
                                    <LinearLayout
                                        
                                        android:layout_above="@+id/t2"
                    android:id="@+id/waterfull_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
               </LinearLayout>
                <LinearLayout 
                     android:id="@+id/pull_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                     </LinearLayout>
                </LinearLayout>
        
    </LinearLayout>
    </ScrollowView>


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/orange_red"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="立即参加"
        android:textSize="18sp" 
        android:textColor="@color/white"
        android:visibility="visible"/>

    

</RelativeLayout>
 <LinearLayout
        android:id="@+id/title_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/orange_red" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_white" 
            android:padding="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginRight="48dp"
            android:layout_gravity="center_vertical"
            android:text="线上活动详情" 
            android:textColor="@color/white"/>

    </LinearLayout>
     <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/black_layout">
          <View 
              android:id="@+id/popup_parent"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_centerInParent="true"/>
      </RelativeLayout>
    
