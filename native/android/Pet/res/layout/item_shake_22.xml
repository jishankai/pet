<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="宠物香波 X 1"
            android:textColor="@color/white"
            android:background="@drawable/shake_giftname_background"
            android:paddingTop="15dp"
            android:layout_marginLeft="0dp"
            android:gravity="center_horizontal"
            android:textSize="16sp" />
        

        <RelativeLayout
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp"
            android:background="@drawable/shake_gift_background1"
             ><!--  -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="102dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:src="@drawable/gift112" />
            <TextView
             android:id="@+id/textView9"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/imageView2"
             android:layout_marginTop="5dp"
             android:layout_centerHorizontal="true"
             android:text="人气+10" 
             android:textColor="@color/white"
             android:textSize="16sp"
             android:gravity="center"/>
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView 
                 android:id="@+id/cancel_shake"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_green"
                android:text="再摇1次"
                android:gravity="center"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                
                android:paddingBottom="5dp"
                />
            <TextView 
                android:id="@+id/sure_shake"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_green"
                android:text="就送这个"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginLeft="70dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />
             
        </LinearLayout>
        
        

</RelativeLayout>
