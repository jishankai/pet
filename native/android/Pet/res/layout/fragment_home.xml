<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/homeactivity_right_relativelayout"
   android:visibility="visible">
    
    
         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/relativelayout_control"
        android:background="@drawable/blur"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
       >
      
    </LinearLayout>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:orientation="vertical"
       >
       <RelativeLayout
        android:id="@+id/relativelayout_control1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/orange_title_height" 
        android:background="#fb6137"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >    
       </RelativeLayout>
         <LinearLayout 
    android:id="@+id/linelaout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/relativelayout_control1">
    </LinearLayout> 
         
      <android.support.v4.view.ViewPager
                android:layout_below="@+id/linelaout1"
                 android:id="@+id/viewpager"
                 android:layout_width="fill_parent"
                 android:layout_height="match_parent"
                 
                 android:background="#00000000"
                 android:layout_weight="1"
                 android:paddingLeft="0dp"
                 android:paddingRight="0dp">
                
            </android.support.v4.view.ViewPager>
      
      <me.maxwin.view.XListView 
           android:layout_below="@+id/linelaout1"
          android:id="@+id/listview"
          android:layout_marginTop="40dp"
          android:visibility="invisible"
        android:scrollbars="vertical"
         android:fastScrollEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:divider="@null"
        xmlns:pla="http://schemas.android.com/apk/res-auto"
        pla:plaLandscapeColumnNumber="1"
       pla:plaColumnNumber="1"
          />
      
      
             <!-- 三个tab -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" 
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/relativelayout_control1"
            android:visibility="visible"
            android:id="@+id/tab_llayout">
         

            <TextView
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="@drawable/tab_home_left_red"
                android:text="@string/homefragment_note1" 
                
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:paddingLeft="15dp"
                android:gravity="center"
                android:paddingRight="15dp"
                android:paddingTop="@dimen/home_activity_menu_padding"
                android:paddingBottom="@dimen/home_activity_menu_padding"
                />

            
            <TextView
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="30.1dp"
                android:text="@string/homefragment_note3"
                android:textSize="16sp"
                android:textColor="#FF6F44"
                android:paddingLeft="15dp"
                android:gravity="center"
                android:paddingRight="15dp"
                android:background="@drawable/tab_home_middle_white"
                android:paddingTop="@dimen/home_activity_menu_padding"
                android:paddingBottom="@dimen/home_activity_menu_padding"/>

      
            
            
            <TextView
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:text="@string/homefragment_note2"
                android:textSize="16sp"
                android:textColor="#FF6F44"
                android:paddingLeft="15dp"
                android:gravity="center"
               
                android:paddingRight="15dp"
                android:background="@drawable/tab_home_right_white"
                android:paddingTop="@dimen/home_activity_menu_padding"
                android:paddingBottom="@dimen/home_activity_menu_padding"/>

        </LinearLayout>
        
               
        
        
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" 
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:visibility="invisible"
            android:layout_below="@+id/relativelayout_control1"
             android:id="@+id/search_llayout">
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/home_search_frame">
            <TextView android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="萌星"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="#565656"
                android:paddingBottom="-3dp"
                android:background="@drawable/home_spinner"
                android:id="@+id/spinnerTv"/>
            <EditText 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="搜索"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:singleLine="true"
                android:background="@null"
                android:id="@+id/searchInputEt"/>
            </LinearLayout>
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:background="@drawable/home_cancel"
                android:id="@+id/searchOrCancelTv"/><!--android:textColor="#565656"  -->

        </LinearLayout>
        
           
        
        
             <RelativeLayout
           android:layout_below="@+id/linelaout1"
        android:id="@+id/waterfall_parent"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:orientation="vertical"
        android:paddingRight="0dp"
       android:visibility="visible"
       android:gravity="bottom">
        
    </RelativeLayout>
    </RelativeLayout>
   <!--  </ScrollView> -->

    <RelativeLayout
        android:id="@+id/relativelayout_control"
        android:layout_width="match_parent"
        android:layout_height="@dimen/orange_title_height" 
        android:background="#edfb6137"
        android:paddingTop="5dp"
        android:layout_below="@+id/linearlayout_title"
        android:paddingBottom="5dp"
>
         <Button
            android:layout_width="42dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp" 
            android:background="@drawable/menu"
            android:id="@+id/menu1"
           
            android:layout_centerVertical="true"
            />
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="0"
             android:gravity="center"
             android:paddingTop="1dp"
             android:paddingBottom="1dp"
             android:paddingLeft="6dp"
             android:paddingRight="6dp"
             android:textSize="10sp"
             android:id="@+id/message_num_tv"
             android:textColor="@color/white"
             android:background="@drawable/home_message_num"
             android:layout_alignTop="@+id/menu1"
             android:layout_marginTop="-5dp"
             android:visibility="invisible"
             android:layout_toRightOf="@+id/menu1"
             android:layout_marginLeft="-10dp"/>
        <Button
            android:id="@+id/imageView1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp" 
            android:background="#00000000"
            android:layout_centerVertical="true"
            />
         <Button
            android:id="@+id/imageView2"
            android:layout_width="46dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/camera" 
            android:visibility="visible"/>

        <Button
           
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#00000000" 
             android:visibility="invisible"/>
         <TextView 
             android:id="@+id/title_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="宠物星球"
             android:textSize="20sp"
             android:textColor="@color/white"
             android:layout_centerInParent="true"/>
         <ImageView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/search"
             android:layout_toRightOf="@+id/title_tv"
             android:layout_centerVertical="true"
             android:layout_marginLeft="3dp"
             android:id="@+id/search_iv"/>


    </RelativeLayout>


      
        <RelativeLayout 
    android:id="@+id/relativelaout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
     <LinearLayout 
    android:id="@+id/linelaout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    </LinearLayout>
</RelativeLayout>
     <RelativeLayout
        android:id="@+id/claw_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:orientation="vertical"
        android:paddingRight="0dp"
       android:visibility="visible"
       android:gravity="bottom">
        
    </RelativeLayout> 
           
             <LinearLayout
        android:id="@+id/progress_parent"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/relativelayout_control"
        android:background="#00000000"
        android:visibility="visible"
        android:layout_weight="1"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
       >
             </LinearLayout>
              <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/blur_view"
          android:orientation="horizontal"
          android:visibility="invisible"/>

      <LinearLayout
          android:id="@+id/camera_album"
          android:layout_width="match_parent"
          android:layout_height="match_parent" 
          android:orientation="horizontal"
          android:layout_alignParentBottom="true"
          android:background="#80000000"
          android:visibility="invisible"
          android:gravity="center">
      </LinearLayout>
      <RelativeLayout 
          android:id="@+id/black_layout"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <View 
              android:id="@+id/popup_parent"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_centerInParent="true"/>
      </RelativeLayout>

   

</RelativeLayout>

</LinearLayout>
