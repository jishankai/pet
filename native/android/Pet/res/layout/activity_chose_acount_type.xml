<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/blur"
    android:id="@+id/parent"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/imageView3"
        android:paddingBottom="20dp">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chose_type_image"
            android:layout_centerHorizontal="true"
            android:id="@+id/iv"/>
        <ImageView 
            android:layout_below="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/has_cat"
            android:id="@+id/has_pet_iv"
            android:layout_marginTop="55dp"/>
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_cat"
            android:id="@+id/no_pet_iv"
             android:layout_below="@+id/has_pet_iv"
             android:layout_marginTop="50dp"/>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/no_pet_iv"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/agree_layout"
            android:layout_marginTop="10dp">
            <ImageView 
                android:id="@+id/agree_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/box_chose_gray"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意"
                android:layout_marginLeft="10dp"
                />
            <TextView 
                android:id="@+id/agree_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户协议"
                android:layout_marginLeft="2dp"
                android:textColor="@color/orange_red1"/>
        </LinearLayout>
        </RelativeLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back_red" />

</RelativeLayout>
