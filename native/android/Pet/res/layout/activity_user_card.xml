<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="460dp">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
   android:layout_centerHorizontal="true"
    android:background="@drawable/profile_bg" >
    <ImageView 
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:src="@drawable/dialog_close_white"/>
    <com.aidigame.hisun.pet.view.RoundImageView 
        android:id="@+id/user_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/close_iv"
        android:layout_marginTop="-15dp"
        android:src="@drawable/user_icon"/>
    <LinearLayout 
        android:id="@+id/name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user_icon"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange_red1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="一打一打一打益达"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/sex_iv"
            android:src="@drawable/female1"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="北京市 | 朝阳区"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
        android:layout_below="@+id/name_layout"/>
     <LinearLayout 
        android:id="@+id/gold_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/address_tv"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
                <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gold_iv"
            android:src="@drawable/gold1"/>
        <TextView 
            android:id="@+id/gold_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange_red1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="36000"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>
    <RelativeLayout 
        android:id="@+id/pets_layout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/gold_layout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_bg_pets"
        >
        <ImageView 
            android:id="@+id/left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>
         <ImageView 
            android:id="@+id/right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_arrow"
            android:layout_centerVertical="true"
            android:rotation="180"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
         <LinearLayout 
             android:id="@+id/list_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_centerVertical="true"
             android:layout_toRightOf="@+id/left_iv"
             android:layout_toLeftOf="@+id/right_iv"
             android:layout_marginLeft="10dp"
             android:gravity="center"
             android:layout_marginRight="10dp">
             <com.aidigame.hisun.pet.view.HorizontalListView2 
                 android:layout_width="189dp"
                 android:layout_height="48dp"
                 android:focusable="false"
                 android:focusableInTouchMode="false"
                 android:id="@+id/listview"></com.aidigame.hisun.pet.view.HorizontalListView2><!-- 156dp -->
         </LinearLayout>
         
    </RelativeLayout>
<TextView 
    android:id="@+id/button_tv"
             android:layout_centerHorizontal="true"
             android:layout_below="@+id/pets_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/bt_more_green"
             android:layout_marginLeft="30dp"
             android:gravity="center"
             android:text="私信"
             android:textSize="18sp"
             android:layout_marginBottom="10dp"
             
             android:textColor="@color/white"
             android:layout_marginRight="30dp"/>


      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center"
          android:orientation="horizontal"
          android:id="@+id/progress_layout"></LinearLayout>
                <!-- 注册弹窗使用 -->
 <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/black_layout"
          android:visibility="visible"
          android:gravity="center"
          >
          <View 
              android:id="@+id/popup_parent"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_centerInParent="true"/>
      </RelativeLayout>
</RelativeLayout>
</RelativeLayout>