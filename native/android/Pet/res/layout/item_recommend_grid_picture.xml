<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:orientation="vertical" >
    
    <!-- 热门萌星 -->
<LinearLayout 
    android:id="@+id/pets_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    
   >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:background="@color/white">
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/hot_tv"
            android:text="最热萌星"/>
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="查看全部"
            android:layout_alignParentRight="true"
            android:id="@+id/see_all_tv"
            android:paddingRight="5dp"
            android:textColor="@color/orange_red1"/>
        </RelativeLayout>
        
    <com.aidigame.hisun.imengstar.view.HorizontalListView2
        android:layout_marginTop="5dp"
                android:id="@+id/galleryview"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
             android:layout_centerVertical="true"
             android:gravity="right"
             android:orientation="horizontal"
             android:layout_alignParentRight="true"
             android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            />
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/blur_bg"/>
     <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="热门照片"
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:layout_marginTop="0dp"
             android:paddingBottom="5dp"
            android:paddingTop="5dp"/>
</LinearLayout>
<!-- ********************************** -->
    
    
    
    
    
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    
    android:orientation="horizontal" ><!--android:paddingLeft="5dp"
    android:paddingRight="5dp"  -->
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.25dp"
        android:paddingBottom="1.25dp">
        <ImageView 
              android:id="@+id/iv1"
              
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bug"/>
        <LinearLayout 
            android:id="@+id/iv1_layout"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:background="@drawable/button_gray_light"
            android:gravity="center"
            android:layout_alignBottom="@+id/iv1"
            android:layout_alignRight="@+id/iv1"
            android:layout_marginRight="2dp"
            android:visibility="gone"
            android:layout_marginBottom="5dp">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_heart"
                android:layout_marginLeft="0dp"/>
            <TextView 
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="254"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.25dp"
        android:paddingBottom="1.25dp">
        <ImageView 
                 android:id="@+id/iv2"
         android:layout_width="wrap_content" 
        android:layout_marginLeft="2.5dp"
        
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bug"/>
        <LinearLayout 
            android:id="@+id/iv2_layout"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
             android:visibility="gone"
            android:background="@drawable/button_gray_light"
            android:gravity="center"
            android:layout_alignBottom="@+id/iv2"
            android:layout_alignRight="@+id/iv2"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_heart"
                android:layout_marginLeft="0dp"/>
            <TextView 
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="254"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.25dp"
        android:paddingBottom="1.25dp">
         <ImageView 
              android:id="@+id/iv3"
         android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="2.5dp"
        android:src="@drawable/bug"/>
         <LinearLayout 
             android:id="@+id/iv3_layout"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:background="@drawable/button_gray_light"
            android:gravity="center"
            android:layout_alignBottom="@+id/iv3"
            android:layout_alignRight="@+id/iv3"
            android:layout_marginRight="0dp"
             android:visibility="gone"
            android:layout_marginBottom="5dp">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_heart"
                android:layout_marginLeft="2dp"/>
            <TextView 
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="254"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>
    </RelativeLayout>
          
             
         
      
  

    

</LinearLayout>
</LinearLayout>
