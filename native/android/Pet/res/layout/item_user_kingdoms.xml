<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/dossier_tab_color"
    >
      <RelativeLayout
                android:id="@+id/rlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_toLeftOf="@+id/buttons_layout">
      <RelativeLayout
                android:id="@+id/user_info_relativelayout"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="wrap_content" >

                <!-- 106 -->

                <com.aidigame.hisun.pet.view.RoundImageView
                    android:id="@+id/imageView3"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:id="@+id/current_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/hat_green"
                    android:layout_alignBottom="@+id/imageView3" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@+id/imageView3"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/kingdom_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="猫君国"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text=" — "
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/user_job_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="祭司"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginRight="0dp"
                android:layout_marginTop="5dp">
                     <RelativeLayout 
                         android:id="@+id/progress_parent"
                     android:layout_toLeftOf="@+id/heart_tv"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    
                    android:background="@drawable/progress_background"
                    android:padding="1dp"
                    android:layout_marginRight="-6dp">
                    <View 
                        android:id="@+id/progress_view"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/progress_background_value"
                        />
                    <TextView 
                    
                        android:id="@+id/progress_value_tv"
                         android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   
                        android:text="75/100"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </RelativeLayout>
                
                
                <TextView 
                    android:layout_alignParentRight="true"
                    android:id="@+id/heart_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contribute_heart"
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="贡献度"
                    />
            </RelativeLayout>
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light"/>
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <LinearLayout 
                    android:id="@+id/people_hot_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/people_hot_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/orange_red" />
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="人气"/>
                    
                </LinearLayout>
                 <LinearLayout 
                     android:id="@+id/trend_num_layout"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/trend_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/orange_red" />
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="动态"/>
                    
                </LinearLayout>
                <LinearLayout 
                    android:id="@+id/people_num_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/people_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textColor="@color/orange_red" />
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="成员"/>
                    
                </LinearLayout>
            </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            </RelativeLayout>
            <LinearLayout 
                android:id="@+id/buttons_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:visibility="gone">
                <LinearLayout 
                    android:id="@+id/quit_kingdom_layout"
                android:layout_width="78dp"
                android:layout_height="104dp"
                android:layout_alignParentRight="true"
                android:background="@color/gray_light"
                android:orientation="vertical"
                android:gravity="center"
                 android:clickable="true"
                >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/smile_face_gray"
                android:clickable="false"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王国"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                />
            </LinearLayout>
                <LinearLayout 
                    android:id="@+id/change_current_kingdom_layout"
                android:layout_width="78dp"
                android:layout_height="104dp"
                android:layout_alignParentRight="true"
                android:background="@color/orange_red"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hat_king_gray"
                android:clickable="false"/>
            <TextView 
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设为"
                android:textColor="@color/white"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认 "
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                />
            </LinearLayout>
            </LinearLayout>
            </RelativeLayout>
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/button_gray_white"
                android:layout_below="@+id/rlayout"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:id="@+id/join_layout"
                android:visibility="visible"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/gray_white_plus" />
                
            </RelativeLayout>

</RelativeLayout>
