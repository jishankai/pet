<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/framelayout1"
    android:background="@color/white"
    ><!--  android:background="@drawable/blur" -->
    
    
    
    
   <!-- FrameLayout --> 
    <LinearLayout 
            android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
         
    <!-- 用户信息显示区域 -->
     <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
         
        <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#608e2918">
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        
        android:gravity="center_vertical"><!-- android:background="#33fc7b51"  -->

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus_more" 
            android:padding="12dp"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/fragment_new_user_center_str1" 
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"/>
        <ImageView 
            android:id="@+id/setup_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_center_setup"
            android:layout_marginRight="10dp"
            android:padding="4dp"
            android:paddingLeft="5dp"/>

    </LinearLayout> 
            <RelativeLayout
                android:layout_marginTop="-0dp"
                android:id="@+id/user_info_relativelayout"
                android:layout_width="match_parent"
                
                android:layout_height="wrap_content" >
                    <com.aidigame.hisun.imengstar.view.RoundImageView
                    android:id="@+id/show_topic_usericon"
                    android:layout_width="72dp"
                    android:src="@drawable/user_icon"
                    android:layout_height="72dp"
                    android:layout_centerInParent="true"
                    />
               
            </RelativeLayout>
             
                <LinearLayout
                    
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView3"
                   
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/imageView3"
                    android:gravity="center"
                    android:orientation="horizontal" >
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/l1"
                        android:gravity="right"
                         android:layout_weight="0.8"
                        android:layout_toLeftOf="@+id/l2">
                         <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gold"
                        android:layout_toLeftOf="@+id/gold_num_tv"/>
                    <TextView 
                        android:id="@+id/gold_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="3dp"
                        />
                    </LinearLayout>
                     <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                         android:layout_centerHorizontal="true"
                        android:id="@+id/l2">
                         <ImageView 
                        android:id="@+id/gender_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gender_girl"
                        android:layout_toLeftOf="@+id/gender_tv"/>
                    <TextView 
                        android:id="@+id/gender_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"
                        android:layout_marginLeft="3dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        />
                    </LinearLayout>
                     <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                         android:layout_toRightOf="@+id/l2"
                          android:layout_weight="0.8"
                          android:gravity="left"
                        android:id="@+id/l3">
                         <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_location"
                        android:id="@+id/loc_iv1"
                       />
                    <TextView 
                        android:id="@+id/user_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_new_user_center_str2"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:layout_toRightOf="@+id/loc_iv1"
                        android:textColor="@color/white"
                        android:layout_marginLeft="3dp"/>
                    </LinearLayout>
                   
                   
                   
                </LinearLayout>
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/white"
                    android:layout_marginTop="15dp"/>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="-5dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                         android:id="@+id/message_layout"
                         android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                        <ImageView 
                            android:id="@+id/trends_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:textSize="16sp"
                            android:src="@drawable/bt_message"/>
                        <TextView 
                            android:id="@+id/message_tv"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ball_red"
                            android:layout_alignRight="@+id/trends_num"
                            android:layout_marginTop="-6dp"
                            android:layout_marginRight="-8dp"
                            android:textSize="10sp"
                            android:text="8"
                            android:gravity="center"
                            android:visibility="invisible"
                            android:textColor="@color/white"
                            android:singleLine="true"/>
                        <TextView 
                            android:layout_below="@+id/trends_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp"
                            android:text="私信"
                            android:layout_marginTop="3dp"/>
                    </RelativeLayout>
                    <RelativeLayout 
                        android:id="@+id/exchange_layout"
                         android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView 
                            android:id="@+id/fans_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:text="100"
                            android:textStyle="bold"
                            android:src="@drawable/bt_exchange"
                            android:textSize="16sp"/>
                        <TextView 
                            android:layout_below="@+id/fans_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp"
                            android:text="兑换"
                            android:layout_marginTop="3dp"/>
                    </RelativeLayout>
                    <RelativeLayout 
                        android:id="@+id/charge_layout"
                         android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_weight="1">
                        <ImageView 
                            android:id="@+id/picture_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:text="100"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:src="@drawable/bt_charge"/>
                        <TextView 
                            android:layout_below="@+id/picture_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp"
                            android:text="充值"
                            android:layout_marginTop="3dp"/>
                    </RelativeLayout>
                    <RelativeLayout 
                        android:id="@+id/gift_layout"
                         android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView 
                            android:id="@+id/picture_num1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:text="100"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:src="@drawable/bt_gift"/>
                        <TextView 
                            android:layout_below="@+id/picture_num1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp"
                            android:text="商城"
                            android:layout_marginTop="3dp"/>
                    </RelativeLayout>
                </LinearLayout>
           
                
                </LinearLayout>
                 
    </LinearLayout>
    <!-- ******************************************************* -->
                <LinearLayout 
                    android:id="@+id/show_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:visibility="visible">
        <LinearLayout 
            android:id="@+id/my_pet_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的萌星"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                   /><!--  android:textSize="12sp" -->
                <View
                    android:id="@+id/line1"
                    android:layout_width="64dp"
                    android:layout_height="1dp"
                    android:background="@color/orange_red1"></View>
                    
            
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/earn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             android:gravity="center"
             android:visibility="gone"
            android:layout_weight="1">
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    
                    android:orientation="horizontal">
                    <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赚金币"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    /><!-- android:textSize="12sp" -->
                    <TextView 
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ball_red"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:text="10"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:singleLine="true"/>
                </LinearLayout>
                
                <View
                    android:id="@+id/line2"
                    android:layout_width="64dp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/orange_red1"></View>
            
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             android:gravity="center"
            android:layout_weight="1">
            <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号管理"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    /><!-- android:textSize="12sp" -->
                <View
                    android:id="@+id/line3"
                    android:layout_width="64dp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/orange_red1"></View>
        </LinearLayout>
         
                    </LinearLayout>
                     <me.maxwin.view.XListView
        android:id="@+id/listview"
        android:scrollbars="vertical"
         android:fastScrollEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:divider="@null"
        xmlns:pla="http://schemas.android.com/apk/res-auto"
        pla:plaLandscapeColumnNumber="1"
       pla:plaColumnNumber="1"
        />
          <LinearLayout 
              android:id="@+id/fragment_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:visibility="gone"></LinearLayout>
</LinearLayout>
