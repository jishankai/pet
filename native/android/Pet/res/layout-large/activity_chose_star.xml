<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="300dp"
        android:layout_height="148dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/quarter_blue_circle" />
    <ImageView 
        android:id="@+id/cloud_imageview2"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:src="@drawable/chose_star_cloud"
        android:scaleType="fitXY"
        android:layout_above="@+id/sign"
        android:layout_marginBottom="5dp"
        
        android:layout_alignParentLeft="true"/>
      <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/sign"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="45dp"
        android:layout_alignParentRight="true"
        android:id="@+id/sign"
        android:paddingTop="10dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择您想"
            android:textColor="#FFDAA6"
            android:textSize="22sp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录的星球"
            android:textColor="#FFDAA6"
            android:textSize="22sp"/>
    </LinearLayout>
    
    <ImageView 
        android:id="@+id/cloud_imageview1"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:src="@drawable/chose_star_cloud"
        android:scaleType="fitXY"
        android:layout_marginLeft="-10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="200dp"/>
    
    <LinearLayout 
         android:id="@+id/linearlayout1"
         android:layout_below="@+id/linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-30dp">
        <View android:layout_width="1dp"
            android:layout_height="10dp"/>
        <ImageView 
            android:id="@+id/dog_star_imageview"
         android:layout_width="168dp"
         android:layout_height="168dp"
         android:src="@drawable/cat_star"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cat_star"
        android:text="喵星球"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="#93C3DF"/>
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cat_star"
        android:text="距离地球一百亿光年"
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:textColor="#93C3DF"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="60dp">
     <View android:layout_width="1dp"
            android:layout_height="60dp"/>
     <ImageView 
         android:id="@+id/cat_star_imageview"
         android:layout_width="168dp"
         android:layout_height="168dp"
         android:src="@drawable/dog_star"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cat_star"
        android:text="汪星球"
        android:textSize="20sp"
        android:textColor="#93C3DF"
        android:singleLine="true"
        android:layout_marginTop="10dp"/>
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cat_star"
        android:text="距离地球九十亿光年"
        android:textSize="20sp"
        android:layout_marginTop="3dp"
       android:singleLine="true"
        android:textColor="#93C3DF"/>
     </LinearLayout>
    <ImageView 
        android:id="@+id/bottom_grass_ground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/grass_ground"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"/>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/grass_ground2"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"/>
   <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/start_image"
        android:visibility="visible"
        />

</RelativeLayout>
