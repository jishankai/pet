<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aidigame.hisun.pet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name="com.aidigame.hisun.pet.PetApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        
        
        <!-- aviary  入口 -->
        <meta-data 
            android:name="com.aviary.android.feather.v1.API_KEY"
            android:value="6bf571b721c3c7ef"/>
        <!-- Main Editor Activity -->
        <activity
            android:name="com.aviary.android.feather.FeatherActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="unspecified"
            android:hardwareAccelerated="true"
            android:largeHeap="true"
            android:process=":standalone"
            android:theme="@style/AviaryTheme" >
            </activity>
       
    <activity
        android:name="com.aviary.android.feather.AlertActivity"
        android:launchMode="standard"
        android:noHistory="true"
        android:theme="@style/AviaryTheme.Dialog">
        <intent-filter>
            <action android:name="aviary.intent.action.ALERT"/>
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
    </activity>

    <!-- CDS Content Service -->
    <service
        android:process=":aviarycds"
        android:name="com.aviary.android.feather.cds.AviaryCdsService"
        android:exported="false">
        <intent-filter>
            <action android:name="aviary.intent.action.CDS_DOWNLOAD_START"/>
            <action android:name="aviary.intent.action.CDS_RESTORE_USER_ITEMS"/>
        </intent-filter>
    </service> 

    <!-- 
        Cds Content Provider, 
        NOTE that the "authorities" value MUST be formatted in this way:
        android:authorities="{your.packagename}.AviaryCdsProvider"
     -->
    <provider
        android:name="com.aviary.android.feather.cds.AviaryCdsProvider"
        android:authorities="com.aidigame.hisun.pet.AviaryCdsProvider"
        android:process=":standalone"
        android:exported="false"
        android:syncable="true" />  


    <!-- CDS Download Receiver -->
    <receiver 
        android:name="com.aviary.android.feather.cds.AviaryCdsReceiver"
        android:process=":standalone" >
        <intent-filter>
            <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
        </intent-filter>
    </receiver>
        
        
    
    
    
    
    
        <activity android:name="com.aidigame.hisun.pet.ui.TakePictureActivity"
            >

        </activity>
        <activity android:name="com.aidigame.hisun.pet.ui.HandlePictureActivity"
            android:theme="@android:style/Theme.Translucent"></activity>
        <activity android:name="com.aidigame.hisun.pet.ui.SubmitPictureActivity"
            ></activity>
        <activity android:name="com.aidigame.hisun.pet.ui.ShowTopicActivity"
            android:theme="@android:style/Theme.Translucent"></activity>
        <activity android:name="com.aidigame.hisun.pet.ui.ShowPictureActivity"
            android:theme="@android:style/Theme.Translucent"></activity>
        <activity android:name="com.aidigame.hisun.pet.ui.HomeActivity"
            android:theme="@android:style/Theme.Translucent"
            android:launchMode="singleInstance">
            
        </activity>
        <activity android:name="com.aidigame.hisun.pet.ui.UserHomepageActivity"
            android:theme="@android:style/Theme.Translucent"></activity>
        <activity android:name="com.aidigame.hisun.pet.ui.OtherUserTopicActivity"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Translucent"></activity>
        <activity android:name="com.aidigame.hisun.pet.ui.FirstPageActivity"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Translucent">
                        <intent-filter >
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.aidigame.hisun.pet.ui.WelcomeActivity"
            android:theme="@android:style/Theme.Translucent"></activity>
        <activity android:name="com.aidigame.hisun.pet.ui.IntroduceActivity"
            android:theme="@android:style/Theme.Translucent"></activity>
        <activity android:name="com.aidigame.hisun.pet.ui.RegisterActivity"
            android:theme="@android:style/Theme.Translucent"></activity>
        <activity android:name="com.aidigame.hisun.pet.ui.PictureAlbumActivity"
            android:theme="@android:style/Theme.Translucent"></activity>
        <activity android:name="com.aidigame.hisun.pet.ui.ScanPictureActivity"
            android:theme="@android:style/Theme.Translucent"></activity>
        <activity android:name="com.aidigame.hisun.pet.ui.ChoseClassActivity"
            android:theme="@android:style/Theme.Translucent"></activity>
        <activity android:name="com.aidigame.hisun.pet.ui.UnregisterNoteActivity"
            android:theme="@android:style/Theme.Translucent"></activity>
                <activity android:name="com.aidigame.hisun.pet.ui.SetupActivity"
            android:theme="@android:style/Theme.Translucent"></activity>
    </application>

</manifest>
